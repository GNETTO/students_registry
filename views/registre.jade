extends layout 
block content 

  include partial_pan.jade
  main(class= "col-md-9 ms-sm-auto col-lg-10 px-md-4")  
   div(class="bg-danger mt-2 p-2 mb-3 text-white") Gestion du registre
   div(class="") 
    a(href="/administration/registre/ajouter" class="btn btn-outline-secondary") Nouveau Registre
   hr
   div(class="bg-light p-3 m-auto") TABLE DES REGISTRES 
   table(class="table")
     thead
      tr
       th ID 
       th Date du Registre
       th Action
     for reg in registre
      tr(class="row-sheet" data-idsheet="#{reg.id}")
       td=reg.id
       td=reg.dte_registre
       td
        a(href="/administration/registre/modifier/#{reg.id}")
         img(src="/icons/pen-alt.svg" class="small-icons")
        a(href="/administration/registre/supprimer/#{reg.id}")
         img(src="/icons/trash.svg" class="small-icons") 

   div(class="bg-light p-3 m-auto") LISTES DES EMARGEMENTS PAR REGISTRE

   table(class="table" id="emarg-table")
    thead
     tr
      th apprenant
      th arriv√©e 
      th depart
    tbody(id="tab-list-emargement")
  script(src="/js/sheet.js")